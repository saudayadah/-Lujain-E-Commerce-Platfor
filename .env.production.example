# Production Environment Configuration
# Copy this file to .env and update with your actual values

APP_NAME="Lujain Agricultural"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://yourdomain.com
APP_TIMEZONE=Asia/Riyadh
APP_LOCALE=ar

# Database
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=production_db_name
DB_USERNAME=production_db_user
DB_PASSWORD=strong_password_here

# Cache & Queue
CACHE_DRIVER=file
QUEUE_CONNECTION=database
SESSION_DRIVER=database

# Moyasar Payment Gateway
PAYMENT_GATEWAY=moyasar
MOYASAR_ENABLED=true
MOYASAR_MODE=live
MOYASAR_PUBLISHABLE_KEY=pk_live_xxxxx
MOYASAR_SECRET_KEY=sk_live_xxxxx
MOYASAR_WEBHOOK_SECRET=
MOYASAR_CALLBACK_URL=${APP_URL}/payment/callback

# SMS Provider
SMS_ENABLED=true
SMS_PROVIDER=unifonic
UNIFONIC_APP_SID=
UNIFONIC_SENDER_ID=Lujain

# Mail
MAIL_MAILER=smtp
MAIL_HOST=mail.yourdomain.com
MAIL_PORT=465
MAIL_USERNAME=noreply@yourdomain.com
MAIL_PASSWORD=
MAIL_ENCRYPTION=ssl
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="${APP_NAME}"

# Application Settings
DEFAULT_LOCALE=ar
FALLBACK_LOCALE=en
TIMEZONE=Asia/Riyadh
